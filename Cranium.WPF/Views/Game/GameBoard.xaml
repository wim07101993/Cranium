<UserControl
    x:Class="Cranium.WPF.Views.Game.GameBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:game="clr-namespace:Cranium.WPF.Views.Controls.Game"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Cranium.WPF.ViewModels.Game"
    d:DataContext="{d:DesignInstance viewModels:IGameBoardViewModel}"
    mc:Ignorable="d">
    <ItemsControl ItemsSource="{Binding Tiles}">
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="{x:Type viewModels:ITileViewModel}">
                <game:Tile
                    Width="120"
                    Height="80"
                    Margin="10"
                    Category="{Binding Category}"
                    CornerRadius="15"
                    Players="{Binding Model.Players}" />
            </DataTemplate>
        </ItemsControl.ItemTemplate>

        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <game:GameBoardPanel />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</UserControl>
